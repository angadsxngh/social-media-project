generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  username     String    @unique
  email        String    @unique
  password     String
  number       String    @unique
  pfp          String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  followers    Int       @default(0)
  following    Int       @default(0)
  refreshToken String
  posts        Int       @default(0)
  Comment      Comment[]
}

model Post {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  caption   String
  mediaUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  authorId  String
  likes     Int
  comments  Comment[]
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  postId    String
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}

model DirectMessage {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  senderId   String
  receiverId String
  message    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
